<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройка киоска"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:paddingTop="8dp"
            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Укажи адрес страницы и пароль администратора. После сохранения откроется киоск-режим."
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="@drawable/bg_card"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Base URL"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:paddingBottom="6dp" />

            <EditText
                android:id="@+id/etUrl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:hint="https://example.com"
                android:inputType="textUri"
                android:textColor="#111111"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp"
                android:singleLine="true"
                android:imeOptions="actionNext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Admin password"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:paddingBottom="6dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:hint="Минимум 6 символов"
                android:inputType="textPassword"
                android:textColor="#111111"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp"
                android:singleLine="true"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#DC2626"
                android:textSize="13sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:text="Сохранить и запустить"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_primary"
                android:elevation="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Скрытое меню администратора будет доступно долгим нажатием в киоск-режиме."
                android:textSize="12sp"
                android:textColor="#9CA3AF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>